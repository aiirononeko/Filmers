.top {
  background-image: url("<%= asset_path("IMG_8567.JPG") %>");
  background-position: center center;
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: cover;
  width: 100%;
  height: 100vh;
  position: fixed;
}

.top h1 {
  margin: 0;
  padding-top: 150px;
  color: #000;
}

.top p {
  color: #000;
  padding-bottom: 30px;
  margin-top: 10px;
}

.top a {
  text-decoration: none;
  color: #000;
  font-weight: bold;
  letter-spacing: 2px;
}

.btn {
  background-color: #c0c0c0;
  padding: 15px 30px;
  border-radius: 5px;
  margin-top: 100px;
}

.btn:hover {
  opacity: 0.7;
}