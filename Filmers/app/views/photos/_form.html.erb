<% if photo.errors.present? %>
  <ul>
    <% photo.errors.full_messages.each do |message| %>
      <li class="uk-alert uk-alert-warning"><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="uk-container uk-margin-top">
  <%= form_with model: photo, local: true do |f| %>
    <fieldset class="uk-fieldset">

      <div class="uk-margin-medium-top">
          <%= f.label :title, class: 'uk-align-center uk-text-center' %>
          <%= f.text_field :title, required: 'required', class: 'uk-input uk-align-center uk-width-1-4' %>
      </div>

      <div class="uk-margin">
          <%= f.label :image, class: 'uk-align-center uk-text-center' %>
          <%= f.file_field :images, multiple: true, required: 'required', class: 'uk-align-center uk-width-1-6' %>
          <%= f.file_field :images, multiple: true, class: 'uk-align-center uk-width-1-6' %>
          <%= f.file_field :images, multiple: true, class: 'uk-align-center uk-width-1-6' %>
          <%= f.file_field :images, multiple: true, class: 'uk-align-center uk-width-1-6' %>
          <%= f.file_field :images, multiple: true, class: 'uk-align-center uk-width-1-6' %>
      </div>

      <div class="uk-margin">
          <%= f.label :description, class: 'uk-align-center uk-text-center' %>
          <%= f.text_area :description, rows: 10, class: 'uk-textarea uk-align-center uk-width-1-2', placeholder: '撮影機材、ロケーション、セッティング etc..' %>
      </div>

      <div class="uk-margin-medium">
          <%= f.submit '個展を開催する', class: 'uk-align-center uk-button uk-button-default' %>
      </div>

    </fieldset>
  <% end %>
</div>